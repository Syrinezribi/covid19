<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/FireBrick">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            ></ImageView>
    <TextView
        android:id="@+id/gr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infos"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30sp" />
    </FrameLayout>
    <TextView
        android:id="@+id/texte1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/format_bouton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="14dp"
        android:text="@string/symptomes"
        android:textSize="16dp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/texte2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/format_bouton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="14dp"
        android:text="@string/prevention"
        android:textSize="16dp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/texte3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/format_bouton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="14dp"
        android:text="@string/traitement"
        android:textSize="16dp"
        android:textColor="#fff"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center">

    </LinearLayout>

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cov"
        android:layout_gravity="center"/>

</LinearLayout>